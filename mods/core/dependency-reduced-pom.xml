<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.droidefense</groupId>
    <artifactId>droidefense</artifactId>
    <version>1.0-SNAPSHOT</version>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>${jdk.version}</source>
                    <target>${jdk.version}</target>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <excludes>
                        <exclude>**/log4j.properties</exclude>
                    </excludes>
                    <archive>
                        <manifest>
                            <mainClass>droidefense.cli.DroidefenseScan</mainClass>
                            <addClasspath>true</addClasspath>
                            <classpathPrefix>${dependecy.directory}/</classpathPrefix>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-shade-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <finalName>${project.artifactId}-${project.version}</finalName>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
            <exclusions>
                <exclusion>
                    <artifactId>hamcrest-core</artifactId>
                    <groupId>org.hamcrest</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>droidefense.mod.manparser</groupId>
            <artifactId>manifest</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.mod.manparser.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.module.pscout</groupId>
            <artifactId>pscout</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.module.pscout.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.module.ssdeep</groupId>
            <artifactId>droidefense.ssdeep</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.module.entropy.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.module.entropy</groupId>
            <artifactId>entropy</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.module.droidefense.ssdeep.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>jadx</groupId>
            <artifactId>jadx</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/third-party/jadx-module.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>axml</groupId>
            <artifactId>axml</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/third-party/axml-parser-lib.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.modules.helpers</groupId>
            <artifactId>helpers</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.modules.helpers.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.modules.batch</groupId>
            <artifactId>batch</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.batch.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.modules.ml</groupId>
            <artifactId>ml</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.modules.ml.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.external.modules.rulengine</groupId>
            <artifactId>rulengine</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.external.modules.rulengine.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>droidefense.mod.vfs</groupId>
            <artifactId>vfs</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/native/droidefense.mod.vfs.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>apktool</groupId>
            <artifactId>apktool</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/third-party/apktool_2.2.1.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>servlet-api</groupId>
            <artifactId>servlet-api</artifactId>
            <version>1.0</version>
            <scope>system</scope>
            <systemPath>${pom.basedir}/../lib/third-party/javax.servlet-api-3.1.0.jar</systemPath>
        </dependency>
    </dependencies>
    <properties>
        <dependecy.directory>lib</dependecy.directory>
        <jdk.version>1.8</jdk.version>
    </properties>
</project>

